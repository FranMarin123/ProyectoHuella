<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="300" prefWidth="400" style="-fx-background-color: #F4F4F4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="example.controllers.RecomendacionController">

    <Label alignment="CENTER" layoutX="50" layoutY="30" prefWidth="300" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2E7D32;" text="Recomendaciones" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="30" />

    <Label fx:id="recomendacionLabel" alignment="CENTER" layoutX="50" layoutY="100" prefWidth="300" style="-fx-font-size: 16px; -fx-text-fill: #333;" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="100" />

    <Button onAction="#salirClick" prefHeight="40" prefWidth="160" style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;" text="Salir" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="120" AnchorPane.rightAnchor="120" />
</AnchorPane>
